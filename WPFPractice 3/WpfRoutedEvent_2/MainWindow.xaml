<Window x:Class="WpfRoutedEvent_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="61,51,0,0" TextWrapping="Wrap" Text="enter a number here" VerticalAlignment="Top" Width="120"/>
        <StackPanel Margin="350,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" ButtonBase.Click="StackPanel_Click">
            <Button x:Name="butAdd" Content="Add"/>
            <Button x:Name="butMult" Content="Multiply"/>
            <Button x:Name="butSqrt" Content="Sqrt"/>
        </StackPanel>

    </Grid>
</Window>
